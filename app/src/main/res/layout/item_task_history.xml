<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/text_task_history_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="2018/12/16 周日 16:57"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/text_task_history_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_task_history_time_start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/layout_task_mark"
            android:text="完成ExecuteAPP的Task页面的代码编写和后台逻辑代码编写，写完后需要做好技术笔记总结"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            tools:ignore="HardcodedText"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.1"/>

        <RelativeLayout
            android:id="@+id/layout_task_mark"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/icon_star_five"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                tools:ignore="HardcodedText"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorViewLine"/>

    </RelativeLayout>

</LinearLayout>