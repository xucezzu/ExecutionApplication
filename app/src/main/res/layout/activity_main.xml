<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/background_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorViewLine"/>

    <RadioGroup
        android:id="@+id/tabs_radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_bottom_margin_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:background="@color/colorBackgroundBottom">

        <com.bubble.execute.widget.ExecRadioButton
            android:id="@+id/tab_radio_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:gravity="center"
            android:text="@string/main_bottom_left"
            android:textColor="#000000"
            android:textSize="12sp"
            app:drawableSize="20dp"
            app:drawableTop="@drawable/draw_calendar"/>

        <com.bubble.execute.widget.ExecRadioButton
            android:id="@+id/tab_radio_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp"
            app:drawableSize="35dp"
            app:drawableTop="@drawable/draw_main"/>

        <com.bubble.execute.widget.ExecRadioButton
            android:id="@+id/tab_radio_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:gravity="center"
            android:text="@string/main_bottom_right"
            android:textColor="#000000"
            android:textSize="12sp"
            app:drawableSize="20dp"
            app:drawableTop="@drawable/draw_count"/>

    </RadioGroup>

</LinearLayout>
