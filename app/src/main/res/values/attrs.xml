<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExecRadioButton">
        <attr name="drawableSize" format="dimension"/>
        <attr name="drawableLeft" format="reference"/>
        <attr name="drawableTop" format="reference"/>
        <attr name="drawableRight" format="reference"/>
        <attr name="drawableBottom" format="reference"/>
    </declare-styleable>
    <!-- 密码输入框 -->
    <declare-styleable name="PasswordEditText">
        <!-- 密码的个数 -->
        <attr name="passwordNumber" format="integer"/>
        <!-- 密码圆点的半径 -->
        <attr name="passwordRadius" format="dimension" />
        <!-- 密码圆点的颜色 -->
        <attr name="passwordColor" format="color" />
        <!-- 分割线的颜色 -->
        <attr name="divisionLineColor" format="color" />
        <!-- 分割线的大小 -->
        <attr name="divisionLineSize" format="color" />
        <!-- 背景边框的颜色 -->
        <attr name="bgColor" format="color" />
        <!-- 背景边框的大小 -->
        <attr name="bgSize" format="dimension" />
        <!-- 背景边框的圆角大小 -->
        <attr name="bgCorner" format="dimension"/>
    </declare-styleable>
    <!-- 自定义的密码键盘 -->
    <declare-styleable name="PasswordKeyboardView">
        <attr name="pkvDeleteDrawable" format="reference"/>
        <attr name="pkvDeleteBackgroundColor" format="color|reference"/>
        <attr name="pkvCancelBackgroundColor" format="color|reference"/>
    </declare-styleable>
    <!-- 自定义进度条 -->
    <declare-styleable name="ExecTaskProgressBarView">
        <!-- 控件的主题颜色 -->
        <attr name="etpBackgroundColor" format="color|reference"/>
    </declare-styleable>
</resources>