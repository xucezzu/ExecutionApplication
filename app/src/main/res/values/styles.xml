<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 设置App的默认Toast的样式 -->
    <style name="AppDefaultToast">
        <!-- 字体是否加粗 -->
        <item name="textBold">false</item>
        <!-- 字体颜色 -->
        <item name="textColor">#ffffff</item>
        <!-- 字体大小 -->
        <item name="textSize">12sp</item>
        <!-- 提示框的背景颜色 -->
        <item name="colorBackground">#8C000000</item>
        <!-- 是否是方形框体 -->
        <item name="solidBackground">true</item>
        <!-- 边框的粗细大小 -->
        <item name="strokeWidth">1dp</item>     API 21+
        <!-- 边框的颜色 -->
        <item name="strokeColor">#fff</item>    API 21+
        <!-- Toast展示的时间长or短 -->
        <item name="length">SHORT</item>         ENUM: LONG | SHORT
        <!-- 圆角的弧度 -->
        <item name="cornerRadius">3dp</item>
    </style>

    <!-- 对话框（确定，取消）-->
    <style name="ConfirmCancelDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item> <!-- 隐藏标题栏 -->
        <item name="android:windowBackground">@drawable/draw_dialog_background</item>
    </style>

</resources>
